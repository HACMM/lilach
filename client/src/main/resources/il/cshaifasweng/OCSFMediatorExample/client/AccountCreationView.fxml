<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="581.0" prefWidth="500" styleClass="anchor-pane root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.AccountCreationController">

   <!-- Back button top-left -->
   <children>
      <Button fx:id="backBtn" accessibleText="Go back" layoutX="10" layoutY="10" onAction="#onBack" styleClass="button secondary back-button">
         <graphic>
            <HBox alignment="CENTER" spacing="4">
               <Label text="←" />
               <Label text="Back" />
            </HBox>
         </graphic>
      </Button>

      <VBox alignment="CENTER" layoutX="100.0" layoutY="80.0" prefHeight="436.0" prefWidth="300.0" spacing="12" AnchorPane.bottomAnchor="123.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="80.0">

         <Text styleClass="welcome" text="🌸 Create Your Account 🌸" />
         <Text styleClass="title" text="Sign Up!" />

         <TextField fx:id="nameField" promptText="Full Name" styleClass="text-field" />
         <TextField promptText="id Number" />
         <TextField fx:id="emailField" promptText="Email" styleClass="text-field" />
         <TextField fx:id="usernameField" promptText="User Name" styleClass="text-field" />
         <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field" />
         <ComboBox fx:id="accountTypeCombo" promptText="Account Type" />
         <Label text="Account Types:"
                style="-fx-font-weight: bold; -fx-font-size: 14px;" />

         <Text wrappingWidth="280" textAlignment="CENTER"
               style="-fx-fill: #555555; -fx-font-size: 12px;"
               text="• Branch Account – allows purchases from one branch.
• Network Account – allows purchases from all branches.
• Yearly Subscription – costs 100₪/year and gives 10% off orders above 50₪." />

         <Button fx:id="addPaymentBtn" mnemonicParsing="false" onAction="#onAddPaymentClicked" text="Add Payment Method" />

         <Button fx:id="ChooseCard" text="Choose Payment Method" visible="false"
                 onAction="#onChooseCardClicked" />
         <Button fx:id="checkoutBtn" text="Checkout (Pay 100₪)" visible="false"
                 onAction="#onCheckoutClicked" />

         <Button fx:id="signupBtn" onAction="#onSignUpClicked" styleClass="button primary" text="Sign me Up!" />

         <Label onMouseClicked="#onLoginLinkClicked" style="-fx-font-size: 14px;" styleClass="welcome" text="Already have an account? Log In" />

         <Label fx:id="warningLabel" maxWidth="250" style="-fx-text-fill: red;" wrapText="true" />
      </VBox>
   </children>
</AnchorPane>

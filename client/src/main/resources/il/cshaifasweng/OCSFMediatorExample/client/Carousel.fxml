<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="180" prefWidth="350" style="-fx-background-color: rgba(255,255,255,0.6);                   -fx-background-radius: 25;                   -fx-padding: 10;                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 4);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.SaleCarouselController">

    <!-- תמונת מבצע -->
    <ImageView fx:id="carouselImage" fitHeight="180" fitWidth="350" preserveRatio="true" style="-fx-background-radius: 25;" />

    <!-- שכבת טקסט -->
    <VBox alignment="BOTTOM_LEFT" maxHeight="180.0" maxWidth="350.0" prefHeight="180.0" prefWidth="450.0" spacing="8">

        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <Label fx:id="carouselTitle" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #ffffff;" />

        <Button fx:id="viewSaleButton" onAction="#onViewSale" style="-fx-background-color: #a64f73; -fx-text-fill: white;                        -fx-padding: 7 15; -fx-background-radius: 10;" text="View Sale" />
    </VBox>

</StackPane>

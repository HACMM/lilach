<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CatalogController">

    <!-- Top bar: back arrow + search + cart (+ owner Add Item) -->
    <top>
        <HBox spacing="8" style="-fx-padding: 8;">
            <Button fx:id="backBtn"
                    text="â† Back"
                    onAction="#onBackClicked"
                    styleClass="button secondary" />

            <!-- Search field + button -->
            <TextField fx:id="filterField" prefHeight="25.0" prefWidth="200.0" promptText="Search..." HBox.hgrow="ALWAYS" />
         <ComboBox prefWidth="85.0" promptText="Price" />
         <ComboBox fx:id="colorFilter" prefWidth="85.0" promptText="Color" />
         <ComboBox fx:id="categoryFilter" prefHeight="25.0" prefWidth="85.0" promptText="Catagory" />
            <TextField fx:id="filterField"
                       promptText="Search..."
                       HBox.hgrow="ALWAYS" />
            <Button text="Search"
                    onAction="#onSearchClicked"
                    styleClass="button primary" />

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Owner-only button (starts hidden; controller toggles visibility) -->
            <Button fx:id="addItemBtn"
                    text="Add New Item"
                    visible="false"
                    onAction="#onAddItemClicked"
                    styleClass="button primary"/>

            <Button fx:id="cartTopBtn"
                    text="Cart"
                    onAction="#onOpenCart"
                    styleClass="button secondary"/>
        </HBox>
    </top>

    <!-- Main table -->
    <center>
        <TableView fx:id="table"
                   onMouseClicked="#onItemClicked"
                   prefHeight="480.0" prefWidth="640.0">
            <columns>
                <TableColumn fx:id="nameCol"  text="Name"  prefWidth="220"/>
                <TableColumn fx:id="typeCol"  text="Type"  prefWidth="140"/>
                <TableColumn fx:id="priceCol" text="Price" prefWidth="90"/>
                <TableColumn fx:id="imageCol" text="Image" prefWidth="180"/>
                <!-- The 'Add to Cart' action column is created in the controller -->
            </columns>
        </TableView>
    </center>
</BorderPane>

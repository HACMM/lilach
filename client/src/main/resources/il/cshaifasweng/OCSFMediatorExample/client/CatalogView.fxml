<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CatalogController">

    <!-- Top bar: back arrow + search -->
    <top>
        <HBox spacing="8" style="-fx-padding: 8;">
            <!-- Back arrow -->
            <Button fx:id="backBtn" onAction="#onBackClicked" styleClass="button secondary" text="← Back" />

            <!-- Search field + button -->
            <TextField fx:id="filterField" prefHeight="25.0" prefWidth="200.0" promptText="Search..." HBox.hgrow="ALWAYS" />
         <ComboBox prefWidth="85.0" promptText="Price" />
         <ComboBox fx:id="colorFilter" prefWidth="85.0" promptText="Color" />
         <ComboBox fx:id="categoryFilter" prefHeight="25.0" prefWidth="85.0" promptText="Catagory" />

            <!-- Spacer (ידחוף את האייקון לימין) -->
            <HBox HBox.hgrow="ALWAYS" />

            <!-- Profile button -->
            <Button fx:id="profileBtn" onAction="#onProfileClicked" style="-fx-background-color: transparent;">
                <graphic>
                    <ImageView fitHeight="25" fitWidth="25" preserveRatio="true">
                        <image>
                            <Image url="@/images/user_icon.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- Main table -->
    <center>
        <TableView fx:id="table" onMouseClicked="#onItemClicked" prefHeight="480.0" prefWidth="640.0">
            <columns>
                <TableColumn fx:id="nameCol" prefWidth="200" text="Name" />
                <TableColumn fx:id="typeCol" prefWidth="150" text="Type" />
                <TableColumn fx:id="priceCol" prefWidth="100" text="Price" />
                <TableColumn fx:id="imageCol" prefWidth="180" text="Image" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Button fx:id="addItemBtn"
                    text="+ Add Item"
                    onAction="#onAddItemClicked"
                    style="-fx-background-color: #832018; -fx-text-fill: white;"
                    visible="false" />
        </HBox>
    </bottom>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ComplaintController"
            prefWidth="720" prefHeight="520"
            style="-fx-background-image: url('/images/flower_background.png');
                   -fx-background-size: cover;
                   -fx-background-position: center;
                   -fx-padding: 20;">

    <children>

        <!-- ◊™◊ô◊ë◊™ ◊™◊ï◊õ◊ü ◊©◊ß◊ï◊§◊î -->
        <VBox spacing="18"
              AnchorPane.leftAnchor="60" AnchorPane.rightAnchor="60"
              AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="40"
              style="-fx-background-color: rgba(255,255,255,0.85);
                     -fx-background-radius: 12;
                     -fx-padding: 25;">

            <!-- üîπ ◊õ◊ï◊™◊®◊™ -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button fx:id="backBtn" onAction="#onBack"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: #2c3e50;
                               -fx-font-weight: bold;">
                    ‚Üê Back
                </Button>
                <Label text="Submit a Complaint"
                       style="-fx-font-size: 22;
                              -fx-font-weight: bold;
                              -fx-text-fill: #2c3e50;"/>
            </HBox>

            <Label text="We‚Äôre here to listen üíó"
                   style="-fx-font-size: 17;
                          -fx-text-fill: #555;
                          -fx-font-style: italic;"/>

            <Separator/>

            <!-- üîπ ◊§◊®◊ò◊ô ◊î◊û◊©◊™◊û◊© -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Branch:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       style="-fx-text-fill: #2c3e50;"/>
                <ComboBox fx:id="BranchCombo"
                          promptText="Choose a branch"
                          prefWidth="240"
                          GridPane.rowIndex="0" GridPane.columnIndex="1"
                          style="-fx-background-radius: 8;
                                 -fx-border-radius: 8;
                                 -fx-border-color: #ddd;
                                 -fx-background-color: #fff;"/>

                <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                       style="-fx-text-fill: #2c3e50;"/>
                <TextField fx:id="NameTextField"
                           promptText="Enter your name"
                           prefWidth="240"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"
                           style="-fx-background-radius: 8;
                                  -fx-border-radius: 8;
                                  -fx-border-color: #ddd;
                                  -fx-background-color: #fff;"/>

                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                       style="-fx-text-fill: #2c3e50;"/>
                <TextField fx:id="EmailTextField"
                           promptText="Enter your email"
                           prefWidth="240"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"
                           style="-fx-background-radius: 8;
                                  -fx-border-radius: 8;
                                  -fx-border-color: #ddd;
                                  -fx-background-color: #fff;"/>

                <Label text="Order No.:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                       style="-fx-text-fill: #2c3e50;"/>
                <TextField fx:id="OrderNumberTextField"
                           promptText="Enter your order number (optional)"
                           prefWidth="240"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"
                           style="-fx-background-radius: 8;
                                  -fx-border-radius: 8;
                                  -fx-border-color: #ddd;
                                  -fx-background-color: #fff;"/>
            </GridPane>

            <Separator/>

            <!-- üîπ ◊™◊ô◊ê◊ï◊® ◊™◊ú◊ï◊†◊î -->
            <VBox spacing="6">
                <Label text="Describe the issue:"
                       style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <TextArea fx:id="descriptionArea"
                          promptText="Tell us what went wrong..."
                          prefHeight="120"
                          wrapText="true"
                          style="-fx-background-color: #fff;
                                 -fx-border-color: #ddd;
                                 -fx-border-radius: 8;
                                 -fx-background-radius: 8;"/>
            </VBox>

            <Separator/>

            <!-- üîπ ◊õ◊§◊™◊ï◊® ◊©◊ú◊ô◊ó◊î -->
            <HBox alignment="CENTER">
                <Button fx:id="sendButton" text="Send Complaint"
                        onAction="#onSendComplaint"
                        style="-fx-background-color: #e7b3d1;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 25;
                               -fx-padding: 8 25 8 25;
                               -fx-font-size: 14;
                               -fx-cursor: hand;" />
            </HBox>
        </VBox>

    </children>
</AnchorPane>

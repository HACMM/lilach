<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.EmployeeManagementController"
            prefHeight="600" prefWidth="800"
            style="-fx-background-image: url('/images/flower_background.png');
                   -fx-background-repeat: no-repeat;
                   -fx-background-size: cover;
                   -fx-background-position: center;
                   -fx-padding: 20;">

    <VBox alignment="TOP_CENTER" spacing="15"
          style="-fx-background-color: rgba(255,255,255,0.85);
                 -fx-background-radius: 12;
                 -fx-padding: 30;"
          AnchorPane.topAnchor="40"
          AnchorPane.bottomAnchor="40"
          AnchorPane.leftAnchor="100"
          AnchorPane.rightAnchor="100">

        <!-- ðŸ”¹ ×›×¤×ª×•×¨ Back -->
        <Button fx:id="backBtn"
                text="â† Back"
                onAction="#onBackClicked"
                style="-fx-background-color: transparent;
                       -fx-text-fill: #a64f73;
                       -fx-font-size: 15px;
                       -fx-font-weight: bold;
                       -fx-cursor: hand;
                       -fx-padding: 5 10 5 10;"
                alignment="CENTER_LEFT"
                maxWidth="Infinity"/>

        <!-- ðŸ”¹ ×›×•×ª×¨×ª -->
        <Label text="Employee Management"
               style="-fx-font-size: 22;
                      -fx-font-weight: bold;
                      -fx-text-fill: #2c3e50;"/>

        <Separator/>

        <!-- ðŸ”¹ ×˜×‘×œ×ª ×¢×•×‘×“×™× -->
        <TableView fx:id="employeeTable"
                   prefHeight="350" prefWidth="650"
                   style="-fx-background-color: #fff;
                          -fx-border-color: #ddd;
                          -fx-border-radius: 8;
                          -fx-background-radius: 8;">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="80"/>
                <TableColumn fx:id="nameCol" text="Name" prefWidth="140"/>
                <TableColumn fx:id="emailCol" text="Email" prefWidth="180"/>
                <TableColumn fx:id="roleCol" text="Role" prefWidth="100"/>
                <TableColumn fx:id="branchCol" text="Branch" prefWidth="150"/>
            </columns>
        </TableView>

        <Separator/>

        <!-- ðŸ”¹ ×›×¤×ª×•×¨×™ ×¤×¢×•×œ×” -->
        <HBox alignment="CENTER" spacing="16">
            <Button text="Add Employee"
                    fx:id="addEmployeeBtn"
                    onAction="#onAddEmployeeClicked"
                    style="-fx-background-color: #e7b3d1;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 20;
                           -fx-padding: 8 25 8 25;
                           -fx-cursor: hand;"/>

            <Button text="Remove Selected"
                    fx:id="removeEmployeeBtn"
                    onAction="#onRemoveEmployeeClicked"
                    style="-fx-background-color: #cccccc;
                           -fx-text-fill: #333;
                           -fx-font-weight: bold;
                           -fx-background-radius: 20;
                           -fx-padding: 8 25 8 25;
                           -fx-cursor: hand;"/>
        </HBox>

        <!-- ðŸ”¹ ×”×•×“×¢×” ×œ×ž×¢×¨×›×ª -->
        <Label fx:id="messageLabel"
               alignment="CENTER"
               maxWidth="600"
               style="-fx-text-fill: #b00020;
                      -fx-font-weight: bold;
                      -fx-font-size: 14;"
               visible="false"/>

    </VBox>
</AnchorPane>

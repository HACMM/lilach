    <children>
        <VBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <Label fx:id="nameLabel" style="-fx-font-size:16px;" />
            <Label fx:id="typeLabel" />
            <Label fx:id="priceLabel" />
            <Button onAction="#onEditPrice" text="Edit Price" />
        </VBox>
    </children>
</AnchorPane>

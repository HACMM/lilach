<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ItemController"
            prefHeight="500" prefWidth="460"
            style="-fx-background-image: url('/images/flower_background.png');
                   -fx-background-repeat: no-repeat;
                   -fx-background-size: cover;
                   -fx-background-position: center;
                   -fx-padding: 20;">

    <children>
        <VBox spacing="18"
              alignment="CENTER"
              AnchorPane.leftAnchor="25"
              AnchorPane.rightAnchor="25"
              AnchorPane.topAnchor="25"
              AnchorPane.bottomAnchor="25"
              style="-fx-background-color: rgba(255,255,255,0.85);
                     -fx-background-radius: 12;
                     -fx-padding: 25;">

            <!-- 🔹 תמונת המוצר -->
            <ImageView fx:id="itemImage"
                       fitHeight="160" fitWidth="160"
                       preserveRatio="true"
                       style="-fx-background-radius: 10;
                              -fx-border-radius: 10;
                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 6, 0, 0, 1);" />

            <!-- 🔹 פרטי המוצר -->
            <VBox spacing="6" alignment="CENTER">
                <Label fx:id="nameLabel"
                       style="-fx-font-size: 20;
                              -fx-font-weight: bold;
                              -fx-text-fill: #2c3e50;" />
                <Label fx:id="typeLabel"
                       style="-fx-font-size: 14;
                              -fx-text-fill: #5c5c5c;" />
                <Label fx:id="priceLabel"
                       style="-fx-font-size: 14;
                              -fx-text-fill: #5c5c5c;" />
            </VBox>

            <!-- 🔹 תיאור -->
            <TextArea fx:id="descriptionTextArea"
                      editable="false"
                      wrapText="true"
                      prefHeight="100"
                      prefWidth="360"
                      style="-fx-background-color: #fff;
                             -fx-border-color: #ddd;
                             -fx-border-radius: 8;
                             -fx-background-radius: 8;
                             -fx-font-size: 13;
                             -fx-text-fill: #2c3e50;" />

            <!-- 🔹 כפתורים -->
            <HBox spacing="10" alignment="CENTER">
                <!-- Add to Cart -->
                <Button fx:id="addToCartBUTTON"
                        onAction="#addToCart"
                        prefWidth="130"
                        style="-fx-background-color: #e7b3d1;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-font-size: 13;
                               -fx-background-radius: 20;
                               -fx-padding: 8 20 8 20;
                               -fx-cursor: hand;">
                    <graphic>
                        <ImageView fx:id="addToCartImage"
                                   fitHeight="18" fitWidth="18"
                                   preserveRatio="true">
                            <image>
                                <Image url='@/images/cart_icon.jpg'/>
                            </image>
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets right="6"/>
                    </HBox.margin>
                    <text>Add to Cart</text>
                </Button>

                <!-- Edit Price -->
                <Button fx:id="EditPriceBTN"
                        onAction="#onEditPrice"
                        text="Edit Price"
                        prefWidth="110"
                        style="-fx-background-color: #cccccc;
                               -fx-text-fill: #333;
                               -fx-font-weight: bold;
                               -fx-font-size: 13;
                               -fx-background-radius: 20;
                               -fx-padding: 8 20 8 20;
                               -fx-cursor: hand;" />

                <!-- Remove Item -->
                <Button fx:id="RemoveBTN"
                        onAction="#onRemoveItem"
                        text="Remove Item"
                        prefWidth="120"
                        style="-fx-background-color: #f3a5a5;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-font-size: 13;
                               -fx-background-radius: 20;
                               -fx-padding: 8 20 8 20;
                               -fx-cursor: hand;" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.LoginController"
            styleClass="anchor-pane root"
            prefWidth="600" prefHeight="400">

   <children>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.MyOrdersController"
            prefWidth="800" prefHeight="500"
            styleClass="root">

    <top>
        <HBox spacing="12" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="← Back" onAction="#onBack" styleClass="button secondary back-button"/>

            <VBox spacing="2">
                <Label text="My Orders" styleClass="title"/>
                <Label text="Review your recent purchases" styleClass="welcome"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>

            <TextField fx:id="searchField" promptText="Search by order ID..." prefWidth="160"/>

            <ComboBox fx:id="statusFilter" prefWidth="140"/>

            <Button text="Filter" onAction="#onFilterClicked" styleClass="button primary"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="ordersTable" prefWidth="780" prefHeight="420">
            <columns>
                <TableColumn fx:id="idCol" text="Order ID" prefWidth="120"/>
                <TableColumn fx:id="dateCol" text="Date" prefWidth="140"/>
                <TableColumn fx:id="itemsCol" text="Items" prefWidth="80"/>
                <TableColumn fx:id="totalCol" text="Total" prefWidth="100"/>
                <TableColumn fx:id="statusCol" text="Status" prefWidth="120"/>
                <TableColumn fx:id="detailsCol" text="Details" prefWidth="100"/>
            </columns>
        </TableView>
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.MyOrdersController"
            prefWidth="800" prefHeight="520"
            style="-fx-background-image: url('images/flower_background.png');
                   -fx-background-repeat: no-repeat;
                   -fx-background-size: cover;
                   -fx-background-position: center;
                   -fx-padding: 20;">

    <children>
        <VBox spacing="16"
              AnchorPane.topAnchor="20"
              AnchorPane.bottomAnchor="20"
              AnchorPane.leftAnchor="30"
              AnchorPane.rightAnchor="30"
              style="-fx-background-color: rgba(255,255,255,0.85);
                     -fx-background-radius: 14;
                     -fx-padding: 20;">

            <!-- 🔹 כותרת עליונה -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
                <Button text="← Back"
                        onAction="#onBack"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: #a0537a;
                               -fx-font-weight: bold;
                               -fx-font-size: 13;
                               -fx-cursor: hand;"/>
                <VBox spacing="2">
                    <Label text="My Orders"
                           style="-fx-font-size: 20;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #93345c;"/>
                    <Label text="Review your recent purchases"
                           style="-fx-font-size: 14;
                                  -fx-text-fill: #c36b91;
                                  -fx-font-style: italic;"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <TextField fx:id="searchField"
                           promptText="Search by order ID..."
                           prefWidth="160"
                           style="-fx-background-color: #fff;
                                  -fx-border-color: #e1a6c2;
                                  -fx-border-radius: 8;
                                  -fx-background-radius: 8;"/>
                <ComboBox fx:id="statusFilter"
                          prefWidth="140"
                          style="-fx-background-color: #fff;
                                 -fx-border-color: #e1a6c2;
                                 -fx-border-radius: 8;
                                 -fx-background-radius: 8;"/>

                <Button text="Filter"
                        onAction="#onFilterClicked"
                        style="-fx-background-color: #e7b3d1;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 20;
                               -fx-padding: 6 18 6 18;
                               -fx-cursor: hand;"/>
            </HBox>

            <!-- 🔹 טבלת ההזמנות -->
            <TableView fx:id="ordersTable"
                       prefWidth="740" prefHeight="400"
                       style="-fx-background-color: rgba(255,255,255,0.95);
                              -fx-border-color: #f0c8d4;
                              -fx-border-radius: 10;
                              -fx-background-radius: 10;">
                <columns>
                    <TableColumn fx:id="idCol" text="Order ID" prefWidth="120"/>
                    <TableColumn fx:id="dateCol" text="Date" prefWidth="140"/>
                    <TableColumn fx:id="itemsCol" text="Items" prefWidth="100"/>
                    <TableColumn fx:id="totalCol" text="Total" prefWidth="100"/>
                    <TableColumn fx:id="statusCol" text="Status" prefWidth="120"/>
                    <TableColumn fx:id="detailsCol" text="Details" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.OrderDetailController"
            prefWidth="500" prefHeight="450"
            styleClass="anchor-pane root">

    <children>
        <!-- Back / Close -->
        <Button fx:id="closeBtn"
                onAction="#onClose"
                styleClass="button secondary back-button"
                layoutX="10" layoutY="10">
            <graphic>
                <HBox spacing="4" alignment="CENTER">
                    <Label text="←"/>
                    <Label text="Back"/>
                </HBox>
            </graphic>
        </Button>

        <VBox spacing="12" layoutX="40" layoutY="60" prefWidth="420">
            <Label text="Order Details" styleClass="title"/>
            <HBox spacing="20">
                <VBox spacing="4">
                    <Label text="Order ID:"/>
                    <Label fx:id="orderIdLabel"/>
                </VBox>
                <VBox spacing="4">
                    <Label text="Date:"/>
                    <Label fx:id="dateLabel"/>
                </VBox>
                <VBox spacing="4">
                    <Label text="Status:"/>
                    <Label fx:id="statusLabel"/>
                </VBox>
            </HBox>

            <Label text="Items:" style="-fx-font-weight: bold;"/>
            <TableView fx:id="itemsTable" prefHeight="200">
                <columns>
                    <TableColumn fx:id="itemNameCol" text="Name" prefWidth="180"/>
                    <TableColumn fx:id="itemQtyCol" text="Qty" prefWidth="60"/>
                    <TableColumn fx:id="itemPriceCol" text="Price" prefWidth="80"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label text="Total:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Label fx:id="totalLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>

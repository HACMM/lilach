<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.OrderDetailController"
            prefWidth="520" prefHeight="460"
            style="-fx-background-image: url('images/flower_background.png');
                   -fx-background-repeat: no-repeat;
                   -fx-background-size: cover;
                   -fx-background-position: center;
                   -fx-padding: 20;">

    <children>
        <!-- תיבה לבנה שקופה -->
        <VBox spacing="18"
              alignment="TOP_CENTER"
              AnchorPane.leftAnchor="25"
              AnchorPane.rightAnchor="25"
              AnchorPane.topAnchor="25"
              AnchorPane.bottomAnchor="25"
              style="-fx-background-color: rgba(255,255,255,0.85);
                     -fx-background-radius: 14;
                     -fx-padding: 20;">

            <!-- 🔹 כפתור חזרה -->
            <HBox alignment="CENTER_LEFT" spacing="6">
                <Button fx:id="closeBtn"
                        text="← Back"
                        onAction="#onClose"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: #a0537a;
                               -fx-font-weight: bold;
                               -fx-font-size: 13;
                               -fx-cursor: hand;"/>
            </HBox>

            <!-- 🔹 כותרת -->
            <Label text="Order Details"
                   style="-fx-font-size: 20;
                          -fx-font-weight: bold;
                          -fx-text-fill: #93345c;"/>

            <!-- 🔹 פרטי ההזמנה -->
            <HBox spacing="25" alignment="CENTER">
                <VBox spacing="4" alignment="CENTER_LEFT">
                    <Label text="Order ID:"
                           style="-fx-font-weight: bold; -fx-text-fill: #5c3a4b;"/>
                    <Label fx:id="orderIdLabel" style="-fx-text-fill: #5c3a4b;"/>
                </VBox>

                <VBox spacing="4" alignment="CENTER_LEFT">
                    <Label text="Date:"
                           style="-fx-font-weight: bold; -fx-text-fill: #5c3a4b;"/>
                    <Label fx:id="dateLabel" style="-fx-text-fill: #5c3a4b;"/>
                </VBox>

                <VBox spacing="4" alignment="CENTER_LEFT">
                    <Label text="Status:"
                           style="-fx-font-weight: bold; -fx-text-fill: #5c3a4b;"/>
                    <Label fx:id="statusLabel" style="-fx-text-fill: #5c3a4b;"/>
                </VBox>
            </HBox>

            <!-- 🔹 טבלת פריטים -->
            <Label text="Items:"
                   style="-fx-font-weight: bold; -fx-text-fill: #5c3a4b;"/>
            <TableView fx:id="itemsTable"
                       prefHeight="220"
                       style="-fx-background-color: rgba(255,255,255,0.95);
                              -fx-border-color: #e1a6c2;
                              -fx-border-radius: 8;
                              -fx-background-radius: 8;">
                <columns>
                    <TableColumn fx:id="itemNameCol" text="Name" prefWidth="200"/>
                    <TableColumn fx:id="itemQtyCol" text="Qty" prefWidth="60"/>
                    <TableColumn fx:id="itemPriceCol" text="Price" prefWidth="100"/>
                </columns>
            </TableView>

            <!-- 🔹 סה״כ -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label text="Total:"
                       style="-fx-font-size: 16;
                              -fx-font-weight: bold;
                              -fx-text-fill: #5c3a4b;"/>
                <Label fx:id="totalLabel"
                       style="-fx-font-size: 16;
                              -fx-font-weight: bold;
                              -fx-text-fill: #93345c;"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>

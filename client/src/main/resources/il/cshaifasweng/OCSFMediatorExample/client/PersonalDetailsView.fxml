<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.PersonalDetailsController"
            prefWidth="800" prefHeight="580"
            style="-fx-background-image: url('images/flower_background.png');
                   -fx-background-repeat: no-repeat;
                   -fx-background-size: cover;
                   -fx-background-position: center;
                   -fx-padding: 20;">

    <children>
        <VBox alignment="CENTER"
              spacing="20"
              AnchorPane.leftAnchor="40"
              AnchorPane.rightAnchor="40"
              AnchorPane.topAnchor="40"
              AnchorPane.bottomAnchor="40"
              style="-fx-background-color: rgba(255,255,255,0.85);
                     -fx-background-radius: 16;
                     -fx-padding: 25;">

            <!-- 🔹 כותרת -->
            <Text text="👤 Personal Details"
                  style="-fx-font-size: 22;
                         -fx-font-weight: bold;
                         -fx-fill: #93345c;"/>

            <!-- 🔹 טופס פרטים אישיים -->
            <GridPane hgap="14" vgap="14" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="150"/>
                    <ColumnConstraints minWidth="250"/>
                </columnConstraints>

                <Label text="Full Name:" style="-fx-text-fill: #5c3a4b;" GridPane.rowIndex="0"/>
                <TextField fx:id="nameField"
                           promptText="Enter your name"
                           prefWidth="250"
                           style="-fx-background-color: #fff;
                                  -fx-border-color: #e1a6c2;
                                  -fx-border-radius: 8;
                                  -fx-background-radius: 8;"
                           GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Email:" style="-fx-text-fill: #5c3a4b;" GridPane.rowIndex="1"/>
                <TextField fx:id="emailField"
                           promptText="Enter your email"
                           prefWidth="250"
                           style="-fx-background-color: #fff;
                                  -fx-border-color: #e1a6c2;
                                  -fx-border-radius: 8;
                                  -fx-background-radius: 8;"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="ID Number:" style="-fx-text-fill: #5c3a4b;" GridPane.rowIndex="2"/>
                <TextField fx:id="idField"
                           promptText="Enter your ID"
                           prefWidth="250"
                           style="-fx-background-color: #fff;
                                  -fx-border-color: #e1a6c2;
                                  -fx-border-radius: 8;
                                  -fx-background-radius: 8;"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Account Type:" style="-fx-text-fill: #5c3a4b;" GridPane.rowIndex="3"/>
                <Label fx:id="accountTypeLbl"
                       style="-fx-text-fill: #93345c; -fx-font-weight: bold;"
                       GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Subscription Expiry:" style="-fx-text-fill: #5c3a4b;" GridPane.rowIndex="4"/>
                <Label fx:id="subscriptionExpiryLbl"
                       style="-fx-text-fill: #93345c;"
                       GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </GridPane>

            <!-- 🔹 כפתורי פעולות -->
            <HBox spacing="12" alignment="CENTER">
                <Button fx:id="saveBtn"
                        text="Save Changes"
                        onAction="#onSaveChanges"
                        style="-fx-background-color: #e7b3d1;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 20;
                               -fx-padding: 6 18 6 18;
                               -fx-cursor: hand;"/>

                <Button fx:id="changePaymentBtn"
                        text="Change Payment Method"
                        onAction="#onChangePayment"
                        style="-fx-background-color: #cccccc;
                               -fx-text-fill: #333;
                               -fx-font-weight: bold;
                               -fx-background-radius: 20;
                               -fx-padding: 6 18 6 18;
                               -fx-cursor: hand;"/>

                <!-- 🔹 כפתור חדש לצפייה בהזמנות -->
                <Button fx:id="myOrdersBtn"
                        text="View My Orders"
                        onAction="#onViewOrders"
                        style="-fx-background-color: #f5a7b8;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 20;
                               -fx-padding: 6 18 6 18;
                               -fx-cursor: hand;"/>
            </HBox>

            <Separator prefWidth="500"/>

            <!-- 🔹 ניהול מנוי -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Subscription Management"
                       style="-fx-font-weight: bold;
                              -fx-font-size: 15;
                              -fx-text-fill: #5c3a4b;"/>

                <Button fx:id="purchaseSubBtn"
                        text="Purchase Subscription"
                        onAction="#onPurchaseSubscription"
                        style="-fx-background-color: #e7b3d1;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 20;
                               -fx-padding: 6 18 6 18;
                               -fx-cursor: hand;"/>

                <Button fx:id="renewSubBtn"
                        text="Renew Subscription"
                        visible="false"
                        onAction="#onRenewSubscription"
                        style="-fx-background-color: #e7b3d1;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 20;
                               -fx-padding: 6 18 6 18;
                               -fx-cursor: hand;"/>
            </VBox>

            <Label fx:id="statusLabel"
                   style="-fx-font-size: 14;
                          -fx-font-weight: bold;
                          -fx-text-fill: green;"/>
        </VBox>
    </children>
</AnchorPane>
